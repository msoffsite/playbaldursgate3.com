<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @await RenderSectionAsync("MetaTags", required: false)
    <meta data-n-head="ssr" property="og:url" content="https://playbaldursgate3.game/">
    <meta data-n-head="ssr" property="og:type" content="website">
    <meta data-n-head="ssr" property="og:image" content="https://playbaldursgate3.game/og-image-play-baldurs-gate-3.jpg">
    <link data-n-head="ssr" rel="icon" type="image/x-icon" href="/favicon-32x32.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EclecticXnet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/override.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EclecticXnet.styles.css" asp-append-version="true" />
</head>
<body class="bg-black text-white">
    <div class="container">
        @RenderBody()
    </div>
    <footer class="footer text-muted">
        <div class="d-flex justify-content-center mb-3">
            <a class="nav-link text-white" href="https://twitter.com/EclecticXnet">
                <i class="fa-brands fa-solid fa-x-twitter fa-1xl" aria-hidden="true" title="Watch playlist videos."></i>
            </a>
            <a class="nav-link text-white" href="https://www.youtube.com/channel/UCoSGwhk4Ql18r4WNb-p5JLQ">
                <i class="fa-brands fa-solid fa-youtube fa-1xl" aria-hidden="true" title="Watch playlist videos."></i>
            </a>
        </div>
        <div class="d-flex justify-content-center">
            &copy; Copywrite 2024<br />All Rights Reserved
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/5dcc46abd4.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>